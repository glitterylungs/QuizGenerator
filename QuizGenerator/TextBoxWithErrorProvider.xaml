<UserControl x:Class="QuizGenerator.TextBoxWithErrorProvider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizGenerator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border x:Name="textBoxBorder" x:FieldModifier="private" BorderBrush="Red" BorderThickness="0">
            <TextBox x:Name="textBox" x:FieldModifier="private" Background="LightGray" >
                <TextBox.ToolTip>
                    <ToolTip x:Name="toolTip" Visibility="Hidden">
                        <TextBlock x:Name="textBlockToolTip" x:FieldModifier="private" Text="Fill in the field"/>
                    </ToolTip>
                </TextBox.ToolTip>
            </TextBox>
        </Border>
    </Grid>
</UserControl>
